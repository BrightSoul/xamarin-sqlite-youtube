<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinApp1.Views.Homepage" Title="Homepage">
  <Label Text="HOMEPAGE: LISTA DELLE VISITE" VerticalOptions="Center" HorizontalOptions="Center" />
  <ListView ItemsSource="{Binding Visite}">
    <ListView.ItemTemplate>
      <DataTemplate>
        <TextCell Text="{Binding Pagina}" Detail="{Binding Data}" />
      </DataTemplate>
    </ListView.ItemTemplate>
  </ListView>
</ContentPage>